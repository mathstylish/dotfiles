# Environment variables set everywhere
export EDITOR="lvim"
export TERMINAL="kitty"
export BROWSER="firefox"
export ZDOTDIR=$HOME/.config/zsh        # zsh config dir
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

# Set wallpaper
feh --bg-scale ~/Pictures/wallpapers/121137.jpg &

# Enable transparency
picom -b &

# Speedy keys
xset r rate 210 40

# Screenshots
flameshot &
